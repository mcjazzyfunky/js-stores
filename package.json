{
  "name": "js-stores",
  "version": "0.1.20",
  "license": "LGPL-3.0",
  "homepage": "https://github.com/js-works/js-stores",
  "main": "index.js",
  "types": "dist/types/index.d.ts",
  "module": "dist/js-stores.esm.production.js",
  "unpkg": "dist/js-stores.umd.production.js",
  "jsdelivr": "dist/js-stores.umd.production.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/js-works/js-stores.git"
  },
  "files": [
    "index.js",
    "dist"
  ],
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.5",
    "bestzip": "^2.1.5",
    "chai": "~4.2.0",
    "copyfiles": "^2.2.0",
    "coveralls": "^3.1.0",
    "cross-conf-env": "^1.1.2",
    "crypto.js": "^1.3.1",
    "immer": "^6.0.5",
    "js-messages": "^0.1.28",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "rollup": "^2.9.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-typescript2": "^0.27.0",
    "rollup-plugin-uglify": "^6.0.4",
    "rollup-plugin-uglify-es": "0.0.1",
    "shx": "^0.3.2",
    "ts-loader": "^7.0.3",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "clean": "shx rm -rf ./build ./dist ./coverage",
    "build": "rollup --config rollup.config.js && tsc -d --emitDeclarationOnly --declarationDir dist/types",
    "__TODO__test": "nyc mocha -r ts-node/register src/test/**/*.ts",
    "test": "mocha -r ts-node/register src/test/**/*.ts",
    "test-watch": "mocha -watch-extensions ts --watch -r ts-node/register src/test/**/*.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "zipsource": "shx rm -rf ./build/source && shx mkdir -p ./build/source && copyfiles -a ./* ./build/source && shx cp -r ./src ./build/source && shx mkdir -p ./dist/source && cd build/source && bestzip ../../dist/source/source.zip . && cd ../..",
    "dist": "npm run clean && npm run test && npm run build && npm run && npm run zipsource"
  },
  "nyc": {
    "temp-directory": "./coverage/.nyc_output",
    "include": [
      "src/main"
    ],
    "exclude": [],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  }
}
